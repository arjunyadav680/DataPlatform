{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run API (launch)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "api: build",
      "program": "${workspaceFolder}/DataPlatform.API/bin/Debug/net9.0/DataPlatform.API.dll",
      "cwd": "${workspaceFolder}/DataPlatform.API",
      "args": [],
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "justMyCode": true
    },

    {
      "name": "Run Angular (open in Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "preLaunchTask": "client: run",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/DataPlatform.Client",
      "sourceMaps": true,
      "trace": true,
      "userDataDir": "${workspaceFolder}/.vscode/chrome-debug-profile",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "Compiled successfully\\."
      }
    },

    {
      "name": "Attach to running .NET",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}",
      "justMyCode": true
    }
  ],

  "compounds": [
    {
      "name": "Run API + Angular",
      "configurations": ["Run API (launch)", "Run Angular (open in Chrome)"]
    }
  ]
}
