{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "api: build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/DataPlatform.API/DataPlatform.API.csproj",
        "-c",
        "Debug"
      ],
      "group": { "kind": "build", "isDefault": true },
      "problemMatcher": "$msCompile"
    },

    {
      "label": "client: run",
      "type": "shell",
      "command": "npm",
      "args": ["start"],
      "options": {
        "cwd": "${workspaceFolder}/DataPlatform.Client"
      },
      "isBackground": true,
      "problemMatcher": [
        "$tsc-watch"
      ]
    }
  ]
}
